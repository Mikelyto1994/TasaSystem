generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  firstName     String
  lastName      String
  areaId        Int
  password      String
  username      String         @unique
  isAdmin       Boolean        @default(false)
  isDeleted     Boolean        @default(false)
  componentes   Componente[]
  otConsumibles OTConsumible[]
  ots           Ots[]
  repuestos     Repuesto[]
  area          Area           @relation(fields: [areaId], references: [id])
}

model Area {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Ots {
  id                Int            @id @default(autoincrement())
  OT                String?
  equipoId          Int?
  descripcionEquipo String?
  zonaId            Int
  ubicacionId       Int?
  userId            Int
  ubicacionSinId    String?
  ottId             String?
  otConsumibles     OTConsumible[]
  equipo            Equipo?        @relation(fields: [equipoId], references: [id])
  OTbasico          OTbasico?      @relation(fields: [ottId], references: [OTmaximo])
  ubicacion         Ubicacion?     @relation(fields: [ubicacionId], references: [id])
  user              User           @relation(fields: [userId], references: [id])
  zona              Zona           @relation(fields: [zonaId], references: [id])
}

model OTConsumible {
  id               Int         @id @default(autoincrement())
  consumibleId     Int?
  nombreConsumible String?
  unidadMedida     String?
  cantidad         Float?
  otId             Int
  userId           Int
  imageUrl         String?
  comentarios      String?
  estado           String?
  reservaSap       String?
  fechaCreacion    DateTime    @default(now())
  consumible       Consumible? @relation(fields: [consumibleId], references: [id])
  ot               Ots         @relation(fields: [otId], references: [id])
  user             User        @relation(fields: [userId], references: [id])
  images           Image[]     @relation("ConsumibleImage")
}

model Consumible {
  id            Int            @id @default(autoincrement())
  name          String
  unidadMedida  String
  codMaximo     String
  nombreMaximo  String
  otConsumibles OTConsumible[]
}

model Zona {
  id           Int         @id @default(autoincrement())
  name         String
  nombreMaximo String
  equipos      Equipo[]
  OTbasico     OTbasico[]
  ots          Ots[]
  ubicaciones  Ubicacion[]
}

model Ubicacion {
  id           Int        @id @default(autoincrement())
  name         String
  nombreMaximo String
  zonaId       Int
  equipos      Equipo[]
  OTbasico     OTbasico[]
  ots          Ots[]
  zona         Zona       @relation(fields: [zonaId], references: [id])
}

model Componente {
  id          Int        @id @default(autoincrement())
  equipoId    Int
  parteEquipo String
  imageUrl    String?
  userId      Int
  atributos   Atributo[]
  equipo      Equipo     @relation(fields: [equipoId], references: [id])
  user        User       @relation(fields: [userId], references: [id])
  repuestos   Repuesto[]
  images      Image[]    @relation("ComponenteImage")
}

model Atributo {
  id           Int        @id @default(autoincrement())
  componenteId Int
  nombre       String
  valor        String?
  componente   Componente @relation(fields: [componenteId], references: [id])
}

model Repuesto {
  id           Int        @id @default(autoincrement())
  componenteId Int
  nombre       String
  descripcion  String?
  imageUrl     String?
  userId       Int
  componente   Componente @relation(fields: [componenteId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
  images       Image[]    @relation("RepuestoImage")
}

model Equipo {
  id             Int          @id @default(autoincrement())
  name           String
  nombreMaximo   String
  zonaId         Int
  ubicacionId    Int
  imageUrl       String?
  ubicacionSinId String?
  componentes    Componente[]
  ubicacion      Ubicacion    @relation(fields: [ubicacionId], references: [id])
  zona           Zona         @relation(fields: [zonaId], references: [id])
  OTbasico       OTbasico[]
  ots            Ots[]
  images         Image[]      @relation("EquipoImage")
}

model Image {
  id           Int            @id @default(autoincrement())
  url          String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  componentess Componente[]   @relation("ComponenteImage")
  consumibless OTConsumible[] @relation("ConsumibleImage")
  equiposs     Equipo[]       @relation("EquipoImage")
  repuestoss   Repuesto[]     @relation("RepuestoImage")
}

model OTbasico {
  id          Int        @id @default(autoincrement())
  name        String
  Temp        String
  OTmaximo    String     @unique
  estado      String
  zonaId      Int?
  ubicacionId Int?
  equipoId    Int?
  Equipo      Equipo?    @relation(fields: [equipoId], references: [id])
  Ubicacion   Ubicacion? @relation(fields: [ubicacionId], references: [id])
  Zona        Zona?      @relation(fields: [zonaId], references: [id])
  Ots         Ots[]
}
